<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/enter_new_location_text"
        android:text="@string/enter_new_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/string_new_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_new_location_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/clickbutton_new_city_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find city results!"
        android:layout_below="@+id/string_new_city"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp" />

    <Spinner
        android:id="@+id/spinner_new_city_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clickbutton_new_city_list"
        android:drawSelectorOnTop="true"
        ></Spinner>

    <Button
        android:id="@+id/clickbutton_new_city_chooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose new location!"
        android:layout_below="@+id/spinner_new_city_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp" />

</LinearLayout>